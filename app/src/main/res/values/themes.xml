<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeHealth" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_purple_500</item>
        <item name="colorPrimaryVariant">@color/md_purple_700</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_200</item>
        <item name="colorSecondaryVariant">@color/md_teal_700</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="my_bottom_nav_style" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/md_white_1000</item>
        <item name="itemIconSize">28dp</item>
        <item name="android:background">@color/md_deep_purple_A400</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextColor">@color/md_white_1000</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>


    <style name="my_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp56</item>
        <item name="android:background">@drawable/edt_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp8</item>
    </style>


    <style name="my_button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp56</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>


</resources>